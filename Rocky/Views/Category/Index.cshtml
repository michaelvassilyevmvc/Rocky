@model IEnumerable<Rocky.Models.Category>


<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-action="Create" asp-controller="Category" asp-area="" class="btn btn-primary">Create New Category</a>
      
    </div>
  </div>
</div>
<br /><br />
@if(Model.Count() > 0)
{
  <table class="table table-bordered table-striped" style="width:100%">
    <thead>
      <tr>
        <th>Category Name</th>
        <th>Display Order</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
          <td width="50%">@item.Name</td>
          <td width="30%">@item.DisplayOrder</td>
          <td></td>
        </tr>
      }
    </tbody>
  </table>
}
else{
  <p>No category exists.</p>
}
  
